@{
    ViewData["Title"] = "Home Page";
}
</br>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.jpg" alt="Sign Up" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    to be part of fun activities! 
                    <a asp-area="" asp-controller="SignUp" asp-action="Create">Learn More</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.jpg" alt="Members List" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Check out who is already enrolled and what they wanna do! 
                    <a asp-area="" asp-controller="SignUp" asp-action="Index">Learn More</a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Sign Up</h2>
        <ul>
            <li>Click <a asp-area="" asp-controller="SignUp" asp-action="Create">here</a> to sign up for activities around the town.</li>
        </ul>
    </div>
    <div class="col-md-6">
        <h2>Interested List</h2>
        <ul>
            <li>Click <a asp-area="" asp-controller="SignUp" asp-action="Index">here</a> to see everybody who already signed up.</li>
        </ul>
    </div>
</div>
